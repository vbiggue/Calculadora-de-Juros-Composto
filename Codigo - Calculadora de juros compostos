      ],
      "source": [
        "Cliente = str(input('Insira o nome do cliente:'))\n",
        "P = float(input('Insira o valor inicial R$:'))\n",
        "PMT = float(input('Insira o valor dos aportes mensais R$:'))\n",
        "R = float(input('Insira a taxa de juros mensal:'))\n",
        "T = int(input('insira o periodo em meses do investimento:'))\n",
        "\n",
        "A = P * ((1 + ( R / 100) * T)) + (PMT * (((1 + ( R / 100) * T) - 1) / ( R / 100)))\n",
        "\n",
        "Investimento =  P + (PMT * T)\n",
        "\n",
        "Rendimento = A - (P + (PMT * T))\n",
        "\n",
        "if Investimento >= Rendimento:\n",
        "  Validacao = False\n",
        "else:\n",
        "    Validacao = True\n",
        "\n",
        "print(f'{Cliente},')\n",
        "print(f'O valor total investido foi de: R$ {Investimento}')\n",
        "print(f'O valor final acumulado é de: R$ {A}')\n",
        "print(f'O Rendimento descontando o investimento foi de: R$ {Rendimento}')\n",
        "print(f'O Rendimento superou o investimento: {Validacao}')\n",
        "\n",
        "\n"
